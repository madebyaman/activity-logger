// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  email     String     @unique
  password  String
  activity  Activity[]
  Profile   Profile[]
  DailyLog  DailyLog[]
  Log       Log[]
}

model Activity {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  type      String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  Log       Log[]
}

model Profile {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sleepFrom Int
  sleepTo   Int
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique
}

model DailyLog {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  date          String   @unique
  // Why string and not datetime? B/c new Date() gives a unique date with milliseconds. Storing it in string as `dd/mm/yyy` will allow me to compare these value easily.
  blocksPerHour Int
  logs          Log[]
  user          User     @relation(fields: [userId], references: [id])
  userId        Int
}

model Log {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  from       DateTime
  to         DateTime
  hour       Int
  activity   Activity? @relation(fields: [activityId], references: [id])
  activityId Int?
  DailyLog   DailyLog? @relation(fields: [dailyLogId], references: [date])
  dailyLogId String?
  User       User?     @relation(fields: [userId], references: [id])
  userId     Int?
}
